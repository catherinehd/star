@import "../../../assets/css/variable"

.article-detail-sec
  background $theme-white-color
  .top
    .title
      font-size $font-big-size
      color $font-main-color
      font-weight bold
      height 3.5rem
      padding 1.4rem $default-h-padding 0
    .date
      height 2.3rem
      font-size $font-small-size
      color $theme-gray-color
      padding 0 $default-h-padding .6rem
      svg
        width 1.1rem
        height 1.1rem
        fill none
        stroke $theme-blue-color
    img
      width 100%
      height 14rem
  .guideance
    padding $default-h-padding
    font-size $font-normal-size
    color $font-main-color
    margin-top -.3rem
    p
      line-height 2
      text-indent 2em
  .detail-sec
    padding 0 $default-h-padding
    .small-title
      font-size $font-big-size
      color $font-main-color
      font-weight bold
      margin-bottom .8rem
      span
        font-size 1.3rem
    .description
      font-size $font-normal-size
      p
        margin-bottom .9rem




