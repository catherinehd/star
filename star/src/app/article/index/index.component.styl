@import "../../../assets/css/variable"

.article-sec
  background $theme-white-color
  padding-bottom 5.9rem
  ul
    li
      padding $default-h-padding
      display flex
      justify-content space-between
      border-bottom $default-border
      &:last-child
        border-bottom none
      .description
        flex-grow 1
        width 21.4rem
        margin-right 2rem
        .title
          font-size $font-normal-size
          margin-top -.4rem
          margin-bottom 1.7rem
          color $font-main-color
          width 100%
          height 4rem
          overflow hidden
          text-overflow ellipsis
          display -webkit-box
          -webkit-box-orient vertical
          -webkit-line-clamp 2
        .author-date
          color $theme-gray-color
          font-size $font-small-size
          display flex
          justify-content space-between
          .author
            width 60%
          .date
            width 40%
            text-align left
          svg
            width 1.1rem
            height 1.1rem
            fill none
            stroke $theme-blue-color
            margin-right .6rem
      img
        flex-grow 0
        width 11rem
        height 7rem
