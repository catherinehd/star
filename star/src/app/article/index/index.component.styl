@import "../../../assets/css/variable"

.article-sec
  background $theme-white-color
  ul
    li
      padding $default-h-padding
      display flex
      justify-content space-between
      border-bottom $default-border
      &:last-child
        border-bottom none
      .description
        flex-grow 1
        width 21.4rem
        margin-right 2rem
        .title
          font-size $font-normal-size
          margin-top -.4rem
          margin-bottom 1.7rem
          color $font-main-color
        .author-date
          color $theme-gray-color
          font-size $font-small-size
          display flex
          justify-content space-between
          svg
            width 1.1rem
            height 1.1rem
            fill none
            stroke $theme-blue-color
            margin-right .6rem
      img
        flex-grow 0
        width 11rem
        height 7rem
