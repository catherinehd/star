@import "../../../assets/css/variable"

.top-container
  position relative
  background url('../../../assets/image/toubu.png')
  background-size 100%
  width 100%
  height 122px
  padding-left 37px
  .img-out-line
    position absolute
    border 1px solid #ffffff
    width 66px
    height @width
    border-radius 50%
    bottom 30px
    margin-right 18px
  .img-container
    text-align center
    background $theme-white-color
    width 57px
    height @width
    border-radius 50%
    margin 0 auto
    margin-top 4px
    img
      width 41px
      height 39px
      margin-top 10px
  .title-container
    position absolute
    bottom 41px
    left 120px
    color #ffffff
    .star
      font-size 18px
      margin-bottom 4px
    .date
      font-size 12px

.navbar
  display flex
  justify-content space-around
  padding $default-h-padding
  border-bottom $default-border

main
  padding-bottom 5.9rem

.star-num-sec
  border-bottom $default-border
  padding $default-h-padding
  &>div
    display flex
    &>div:nth-child(1)
      width 55%
    &>div:nth-child(2)
      width 45%
    &>div
      span
        &:nth-child(1)
          font-size $font-normal-size
          color #0f0f0f
          margin-right 1rem
        &:nth-child(2)
          font-size 1.3rem
          color $theme-little-blue-color


.overview
.love
.wealth
.work
  padding $default-h-padding
  .title
    font-size $font-normal-size
    font-weight bold
    color #0f0f0f
    margin-bottom .9rem
    svg
      width 1.9rem
      height 1.4rem
      fill none
  p
    font-size $font-normal-size
    color $ont-main-color

.overview
  .title
    svg
      stroke #32e4ea
.love
  .title
    svg
      stroke #ea32df

.work
  .title
    svg
      stroke #3277ea

.wealth
  .title
    svg
      stroke #efb332


.icon-dianping-light
  width 1.3rem
  height 1.3rem
  fill $theme-blue-color
.icon-dianping-thin
  width 1.3rem
  height 1.3rem
  fill #d6e3e3
